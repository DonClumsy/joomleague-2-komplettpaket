<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_joomleague/models/rules"
	addfieldpath="/administrator/components/com_joomleague/models/fields">
	<fieldset name="details"  >
		<field
			name="name"
			type="text"
			label="COM_JOOMLEAGUE_GLOBAL_NAME"
			description="COM_JOOMLEAGUE_GLOBAL_NAME_DESC"
			class="inputbox"
			required="true"/>
	<field
			name="middle_name"
			type="text"
			label="COM_JOOMLEAGUE_ADMIN_LEAGUE_MIDDLE_NAME"
			description="COM_JOOMLEAGUE_ADMIN_LEAGUE_MIDDLE_NAME_DESC"
			class="inputbox"/>
	<field
			name="short_name"
			type="text"
			label="COM_JOOMLEAGUE_ADMIN_LEAGUE_SHORT_NAME"
			description="COM_JOOMLEAGUE_ADMIN_LEAGUE_SHORT_NAME_DESC"
			class="inputbox"
			required="true"/>
	<field
			name="alias"
			type="text"
			label="COM_JOOMLEAGUE_GLOBAL_ALIAS"
			description="COM_JOOMLEAGUE_GLOBAL_ALIAS_DESC"
			class="inputbox"/>	
	<field
			name="country"
			type="country"
			label="COM_JOOMLEAGUE_ADMIN_LEAGUE_COUNTRY"
			description="COM_JOOMLEAGUE_ADMIN_LEAGUE_COUNTRY_DESC"
			class="inputbox">
		<option value="">COM_JOOMLEAGUE_GLOBAL_SELECT_COUNTRY</option>
	</field>	
	
  <field
			name="associations"
			type="countryassociation" 
      size="10"
			default="0"
      varname="cid"
			label="COM_JOOMLEAGUE_ADMIN_LEAGUE_ASSOCIATION"
			description="COM_JOOMLEAGUE_ADMIN_LEAGUE_ASSOCIATION_DESC"
			class="inputbox"/>
      
      	
	</fieldset>			

<fieldset name="picture">
			<field
				name="picture"
				type="media"
				default="com_joomleague/database/placeholders/placeholder_21.png"				
				label="COM_JOOMLEAGUE_ADMIN_LEAGUE_EDIT_PICTURE"
				description="COM_JOOMLEAGUE_ADMIN_LEAGUE_EDIT_PICTURE"
				class="inputbox"
				preview="show"				
				directory="com_joomleague/database/leagues"/>
	</fieldset>
	
	<fieldset name="imageselect">
			<field
				name="picture"
				type="imageselect"
				default="com_joomleague/database/placeholders/placeholder_21.png"					
				label="COM_JOOMLEAGUE_ADMIN_LEAGUE_EDIT_PICTURE"
				description="COM_JOOMLEAGUE_ADMIN_LEAGUE_EDIT_PICTURE"
				class="inputbox"
				preview="show"
				targetfolder="leagues"
				directory="com_joomleague/database/leagues"/>		
	</fieldset>	
  	
</form>